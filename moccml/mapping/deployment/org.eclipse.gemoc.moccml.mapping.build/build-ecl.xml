<project name="Build ECL editors" default="runBuild">
	
	<!-- Read property values from the file generated by the build driving shell script 
		 Should define the following properties:
		 builder, buildDirectory, svnRevision, srcDirectory, base, baseLocation, timeStamp
	-->
	<property file="local.properties" />
	
	<property name="javacSource" value="1.6" />
	<property name="javacTarget" value="1.6" />
	
	<property name="topLevelElementType" value="feature" />
	<property name="topLevelElementId" value="org.eclipse.gemoc.moccml.mapping.feature" />
	
	<property name="p2.build.repo" value="file://${buildDirectory}/eclRepo" />

	
	<!--<property name="repoBaseLocation" value="${buildDirectory}" />
	<property name="transformedRepoLocation" value="${buildDirectory}/transformedRepo" />-->

	<import file="${eclipse.pdebuild.scripts}/build.xml" />
	
	<target name="runBuild" depends="main" />
	
</project>
