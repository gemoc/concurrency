<plugin>
 <extension point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*.clocksystem"
            id="org.gemoc.mocc.clocksystem.core.ui.actions.ClockSystemOutput.IFile">
         <menu id="org.gemoc.mocc.clocksystem.core" label="ClockSystem" path="exhaustiveExplorationGroup">
               <groupMarker name="exhaustiveExploration"/> 
         </menu>
         <action
                class="org.gemoc.mocc.clocksystem.core.ui.actions.ClockSystemFileGenHandler"
               enablesFor="1"
               id="org.gemoc.mocc.clocksystem.core.ui.actions.ClockSystemOutputID"
               icon="icons/obp.gif"
               label="Generate All Exploration Files"
               menubarPath="org.gemoc.mocc.clocksystem.core/exhaustiveExploration"/>
      </objectContribution>
   </extension>
</plugin>
